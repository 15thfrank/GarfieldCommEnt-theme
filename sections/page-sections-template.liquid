<article class="site-page" data-template-page>
    {% if section.settings.page_title_enable %}
    <header class="page-masthead">
      <h1 class="page-title">
        {{ page.title }}
      </h1>
    </header>
    {% endif %}

    {% if section.settings.page_content_enable %}
        {% if page.content != blank %}
            <div class="page-content rte">
            {{ page.content }}
            </div>
        {% endif %}
    {% endif %}
</article>

